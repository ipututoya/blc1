    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous" async>
    <script async>
        window.onload = function(e){ 
            // alert("ready");
            
            var ci_day = document.querySelector("[name='checkin_day']");
            var ci_month = document.querySelector("[name='checkin_month']");
            var ci_year = document.querySelector("[name='checkin_year']");

            var co_day = document.querySelector("[name='checkout_day']");
            var co_month = document.querySelector("[name='checkout_month']");
            var co_year = document.querySelector("[name='checkout_year']");

            var ci = document.querySelector("[name='checkin']");
            var co = document.querySelector("[name='checkout']");

            
            // console.log({ci,co});

            var updateCheck=function(){
                
                if(ci.value=="" || co.value==""){
                    
                    var today = dateParser(0);
                    ci_year.value=today.year; ci_month.value=today.month; ci_day.value=today.day;
                    
                    var tomorrow = dateParser(1);
                    co_year.value=tomorrow.year; co_month.value=tomorrow.month; co_day.value=tomorrow.day;
                }

                
                ci.value = ci_year.value+"-"+ci_month.value+"-"+ci_day.value;
                if(new Date(ci.value)>=new Date(co.value)){
                    var tomorrow = dateParser(1,ci.value);
                    co_year.value=tomorrow.year; co_month.value=tomorrow.month; co_day.value=tomorrow.day;
                }
                co.value = co_year.value+"-"+co_month.value+"-"+co_day.value;
            }

            var dateParser = function(increment = 0,dt=""){
                // debugger;
                if(dt==""){
                    var date = new Date();
                }else{
                    var date = new Date(dt);
                }
                if(increment>0){
                    date.setDate(date.getDate() + increment);
                }
                return {
                    month:date.getMonth()+1,
                    year:date.getFullYear(),
                    day:date.getDate()
                }
            }

            updateCheck();

            ci_day.addEventListener("change",updateCheck);
            ci_month.addEventListener("change",updateCheck);
            ci_year.addEventListener("change",updateCheck);
            co_day.addEventListener("change",updateCheck);
            co_month.addEventListener("change",updateCheck);
            co_year.addEventListener("change",updateCheck);
        }
    </script>
</div>
<!-- End of Omnih Booking Script -->
